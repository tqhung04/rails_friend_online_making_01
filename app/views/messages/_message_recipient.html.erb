<li class="<%= message.user_id == current_user.id ? 'left' : 'right' %> w100">
  <% if message.user_id == current_user.id %>
    <%= image_tag message.user.avatar_url, class: "profile-photo-sm pull-left" %>
  <% else %>
    <%= image_tag message.user.avatar_url, class: "profile-photo-sm pull-right" %>
  <% end %>
  <div class="chat-item">
    <div class="chat-item-header">
      <h5><%= message.user.name %></h5>
      <small class="text-muted"><%= time_ago_in_words(message.created_at) %></small>
    </div>
    <p><%= message.body %></p>
  </div>
</li>
