<% if @conection.status %>
  <%= form_for :conection, url: conection_path(@conection.id),  method: :delete, remote: true do |f| %>
    <%= f.hidden_field :id, value: @conection.id %>
      <%= f.submit t(".unfriend"), class: "btn_sign_up btn btn-danger btn-sm"%>
  <% end %>
<% else %>
  <% if @conection.recipient_id == @user.id %>
    <%= form_for :conection, url: conection_path(@conection.id),  method: :delete, remote: true do |f| %>
      <%= f.hidden_field :id, value: @conection.id %>
        <%= f.submit t(".pendding"), class: "btn_sign_up btn btn-warning btn-sm"%>
    <% end %>
   <% else %>
    <%= form_for :conection, url: conection_path(@conection.id),  method: :patch, remote: true do |f| %>
      <%= f.hidden_field :id, value: @conection.id %>
        <%= f.submit t(".accept"), class: "btn_sign_up btn btn-success btn-sm"%>
    <% end %>
    <%= form_for :conection, url: conection_path(@conection.id),  method: :delete, remote: true do |f| %>
      <%= f.hidden_field :id, value: @conection.id %>
        <%= f.submit t(".deny"), class: "btn_sign_up btn btn-danger btn-sm"%>
    <% end %>
   <% end %>
<% end %>
