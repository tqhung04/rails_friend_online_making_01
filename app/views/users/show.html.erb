<% provide :title, @user.name%>
<div class="container">
  <!-- Timeline
  ================================================= -->
  <div class="timeline">
    <%= render "template/timeline_cover" %>
    <div id="page-contents">
      <div class="row">
        <div class="col-md-3 user_show_nav">
          <%= render "layouts/timeline_nav" %>
        </div>
        <div class="col-md-7">

          <!-- About
          ================================================= -->
          <div class="about-profile">
            <div class="about-content-block">
              <h4 class="grey"><i class="ion-ios-information-outline icon-in-title"></i>Personal Information</h4>

              <ul>
                <li>
                  <div class="organization">
                    <h5>Nick Name</h5>
                    <b><span class="text-grey"><%= @user.nick_name%></span></p></b>
                  </div>
                </li>

                <li>
                  <div class="organization">
                    <h5>Genre</h5>
                    <b><span class="text-grey"><%= @user.genre%></span></p></b>
                  </div>
                </li>

                <li>
                  <div class="organization">
                    <h5>Status</h5>
                    <b><span class="text-grey"><%= @user.status%></span></p></b>
                  </div>
                </li>

                <li>
                  <div class="organization">
                    <h5>Country</h5>
                    <b><span class="text-grey"><%= @user.country%></span></p></b>
                  </div>
                </li>

                <li>
                  <div class="organization">
                    <h5>Hobby</h5>
                    <b><span class="text-grey"><%= @user.hobby%></span></p></b>
                  </div>
                </li>

                <li>
                  <div class="organization">
                    <h5>Description</h5>
                    <b><span class="text-grey"><%= @user.description%></span></p><b>
                  </div>
                </li>
              </ul>

            </div>
            <div class="about-content-block">
              <h4 class="grey"><i class="ion-ios-briefcase-outline icon-in-title"></i>Private Information</h4>
              <div class="organization">
                <%= image_tag("envato.png", :class => "pull-left img-org") %>
                <div class="work-info">
                  <h5>Email</h5>
                  <p><span class="text-grey"><%= render "email" %></span></p>
                </div>
              </div>

              <div class="organization">
                <%= image_tag("envato.png", :class => "pull-left img-org") %>
                <div class="work-info">
                  <h5>Birthday</h5>
                  <p><span class="text-grey"><%= render "birthday" %></p>
                </div>
              </div>

              <div class="organization">
                <%= image_tag("envato.png", :class => "pull-left img-org") %>
                <div class="work-info">
                  <h5>Body</h5>
                  <p><span class="text-grey"><%= render "body" %></span></p>
                </div>
              </div>

              <div class="organization">
                <%= image_tag("envato.png", :class => "pull-left img-org") %>
                <div class="work-info">
                  <h5>Job</h5>
                  <p><span class="text-grey"><%= render "career" %></p>
                </div>
              </div>

              <div class="organization">
                <%= image_tag("envato.png", :class => "pull-left img-org") %>
                <div class="work-info">
                  <h5>Education</h5>
                  <p><span class="text-grey"><%= render "education" %></p>
                </div>
              </div>

            </div>
            <div class="about-content-block">
              <h4 class="grey"><i class="ion-ios-location-outline icon-in-title"></i>Location</h4>
              <p>228 Park Eve, New York</p>
              <div class="google-maps">
                <div id="map" class="map"></div>
              </div>
            </div>
            <div class="about-content-block">
              <h4 class="grey"><i class="ion-ios-heart-outline icon-in-title"></i>Interests</h4>
              <ul class="interests list-inline">
                <li><span class="int-icons" title="Bycycle riding"><i class="icon ion-android-bicycle"></i></span></li>
                <li><span class="int-icons" title="Photography"><i class="icon ion-ios-camera"></i></span></li>
                <li><span class="int-icons" title="Shopping"><i class="icon ion-android-cart"></i></span></li>
                <li><span class="int-icons" title="Traveling"><i class="icon ion-android-plane"></i></span></li>
                <li><span class="int-icons" title="Eating"><i class="icon ion-android-restaurant"></i></span></li>
              </ul>
            </div>
            <div class="about-content-block">
              <h4 class="grey"><i class="ion-ios-chatbubble-outline icon-in-title"></i>Language</h4>
                <ul>
                  <li><a href="">Russian</a></li>
                  <li><a href="">English</a></li>
                </ul>
            </div>
          </div>
        </div>
        <div class="col-md-2 static">
          <%= render "template/timeline_activity" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCTMXfmDn0VlqWIyoOxK8997L-amWbUPiQ&callback=initMap", :defer => "defer", :async => true %>

<!-- Report btn -->
<button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#reportModal"><%= t "users.show.report" %></button>

<div id="reportModal" class="modal fade" role="dialog">
  <%= form_for Report.new, url: reports_path, remote: true do |f| %>
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t "users.show.report" %></h4>
        </div>
        <div class="modal-body">
            <%= f.label t("users.show.description") %><br>
            <%= f.text_area :description, class: "form-control", required: true %>
            <%= f.hidden_field :reported_id, value: @user.id %>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal"><%= t "close" %></button>
          <%= f.submit "send", class: "btn btn-danger pull-right", id: "message_btn", "data-dismiss" => ""%>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="alert"></div>
