<% provide :title, t("log_in") %>
<section id="banner">
  <div class="container">
    <div class="sign-up-form">
      <a class="logo">
        <%= image_tag("logo.png") %>
      </a>
      <h2 class="text-white"><%= t ".find_friend" %></h2>
      <div class="line-divider"></div>
      <div class="form-wrapper">
        <% flash.each do |message_type, message| %>
          <ul>
            <li class="c_red"><%= message %></li>
          </ul>
        <% end %>
        <p class="signup-text"><%= t ".login_up_now" %></p>
        <%= form_for(:session, url: login_path) do |f| %>
        <%= field_set_tag nil, class: "form-group" do %>
        <%= f.text_field :email, class: "form-control", id: "example-email",
          placeholder: t(".email") %>
        <% end %>

        <%= field_set_tag nil, class: "form-group" do %>
        <%= f.password_field :password, class: "form-control",
          id: "example-password", placeholder: t(".password") %>
        <% end %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
        <% end %>
        <%= f.submit t("log_in"), class: "btn-secondary" %>
        <% end %>
      </div>
      <div>
      <p>Do not have an account? <%= link_to "Sign up now!", signup_path %></p>
      <%= image_tag("bottom-shadow.png", :class => "form_shadow") %>
      </div>
    </div><!-- Sign Up Form End -->

    <svg class="arrows hidden-xs hidden-sm">
      <path class="a1" d="M0 0 L30 32 L60 0"></path>
      <path class="a2" d="M0 20 L30 52 L60 20"></path>
      <path class="a3" d="M0 40 L30 72 L60 40"></path>
    </svg>
  </div>
</section>

